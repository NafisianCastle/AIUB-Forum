@model AIUB_Forum.Models.Database.User
<style>
    @@import url(http://fonts.googleapis.com/css?family=Lato:400,700);

    body {
        font-family: 'Lato', 'sans-serif';
    }

    .profile {
        min-height: 355px;
        display: inline-block;
    }

    figcaption.ratings {
        margin-top: 20px;
    }

        figcaption.ratings a {
            color: #f1c40f;
            font-size: 11px;
        }

            figcaption.ratings a:hover {
                color: #f39c12;
                text-decoration: none;
            }

    .divider {
        border-top: 1px solid rgba(0,0,0,0.1);
    }

    .emphasis {
        border-top: 4px solid transparent;
    }

        .emphasis:hover {
            border-top: 4px solid #1abc9c;
        }

        .emphasis h2 {
            margin-bottom: 0;
        }

    span.tags {
        background: #1abc9c;
        border-radius: 2px;
        color: #f5f5f5;
        font-weight: bold;
        padding: 2px 4px;
    }

    .dropdown-menu {
        background-color: #34495e;
        box-shadow: none;
        -webkit-box-shadow: none;
        width: 250px;
        margin-left: -125px;
        left: 50%;
    }

        .dropdown-menu .divider {
            background: none;
        }

        .dropdown-menu > li > a {
            color: #f5f5f5;
        }

    .dropup .dropdown-menu {
        margin-bottom: 10px;
    }

        .dropup .dropdown-menu:before {
            content: "";
            border-top: 10px solid #34495e;
            border-right: 10px solid transparent;
            border-left: 10px solid transparent;
            position: absolute;
            bottom: -10px;
            left: 50%;
            margin-left: -10px;
            z-index: 10;
        }

    .myclass tr:hover {
        cursor: pointer;
        background-color: #ccc;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">
            <div class="well profile">
                <div class="col-sm-12">
                    <div class="col-xs-12 col-sm-8">
                        <h2>@Model.Username</h2>
                        <p><strong>About: </strong> @Model.AboutMe </p>
                        <p><strong>Address: </strong> @Model.Location </p>
                        <p>
                            <strong>Badges: </strong>
                            @foreach (var b in @Model.Badges)
                            {
                                <span class="tags">@b.Name</span>
                            }
                        </p>
                    </div>
                </div>
                <div class="col-xs-12 divider text-center">
                    <div class="col-xs-12 col-sm-4 emphasis">
                        <h2><strong>  @Model.Posts.Count </strong></h2>
                        <p><small>Posts</small></p>
                    </div>
                    <div class="col-xs-12 col-sm-4 emphasis">
                        <h2><strong>@Model.Answers.Count</strong></h2>
                        <p><small>Answers</small></p>
                    </div>
                    <div class="col-xs-12 col-sm-4 emphasis">
                        <h2><strong>@Model.Votes.Count+@Model.AnswerVotes.Count</strong></h2>
                        <p><small>Votes</small></p>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="table-responsive">
        <table class="table table-bordered table-condensed table-striped table-hover">
            <thead>
                <tr>
                    <th>Score</th>
                    <th>Title</th>
                    <th>Body</th>
                    <th>Views</th>
                    <th>Answers</th>
                    <th>Comments</th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="table-hover table-striped">
                @foreach (var post in @Model.Posts)
                {
                    <tr>
                        <td>@post.Score</td>
                        <td>@post.Title.Substring(0, 4) ...</td>
                        <td>@post.Body.Substring(0, 10) <a href="/posts/details/@post.PostId">see more...</a></td>
                        <td>@post.views</td>
                        <td>@post.AnswerCount</td>
                        <td>@post.ComentsCount</td>
                        <td><i>posted on @post.CreateDate</i></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>





