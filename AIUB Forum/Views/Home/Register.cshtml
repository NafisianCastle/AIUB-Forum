
@{
    ViewBag.Title = "Register";
}
<script>
    function Vali() {
        let x = document.forms["reg"]["Username"].value;
        if (x == "") {
            alert("User name must be filled out!");
            return false;
        }
        
    }
</script>
<h2>Register</h2>
<form name="reg" action="/home/register" method="post" class="form-horizontal" onsubmit="return Vali()">
    <label for="Username">Username</label>
    <input type="text" name="Username" id="Username" placeholder="Enter Username" class="form-control" pattern="^[a-zA-Z0-9_]{5,}[a-zA-Z]+[0-9]*$" 
           title="At least five alphanumerics and the underscore & at least one letter"/> <br />
    <label for="Email">Email</label>
    <input type="email" name="Email" id="Email" placeholder="Enter Email" class="form-control"  pattern="^[a-zA-Z0-9+_.-]+@[a-zA-Z0-9.-]+$" 
           title="please write a valid email."/> <br />
    <label for="Password">Password</label>
    <input type="password" name="Password" id="Password" placeholder="Enter Password" class="form-control"pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
           title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required  /> <br />
    <label for="Location">Location</label>
    <input type="text" name="Location" id="Location" placeholder="Enter your location" class="form-control" required/> <br/>
    <input type="submit" value="Register!"/>
</form>
